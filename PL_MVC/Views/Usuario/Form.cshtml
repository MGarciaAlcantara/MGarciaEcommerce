    <script type="text/javascript">
        var j = jQuery.noConflict();

        j(function () {
            j("#txtFechaNacimiento").datepicker({
                dateFormat: 'dd-MM-yy',
                showOn: 'button',
                buttonImage: "../Content/windows-calendar.png",
