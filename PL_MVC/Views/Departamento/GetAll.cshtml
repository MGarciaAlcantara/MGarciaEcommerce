@model  ML.Departamento

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Departamentos</h2>

<div class="container">
    <div class="row">
        <center>
            <div style="float:right; margin-bottom:1rem; ">
                @Html.ActionLink("+", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })
            </div>
        </center>
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <td>Editar</td>
                    <td class="hidden">IdDepartamento</td>
                    <td>Nombre</td>
                    <td>IdArea</td>
                    <td>NombreArea</td>
                 
                    <td>Eliminar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Departamento departamento in Model.Departamentos)
                {
                    <tr>
                        <td><a class="btn btn-warning glyphicon glyphicon-edit text-center" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento })"></a></td>
                        <td class="hidden">@departamento.IdDepartamento</td>
                        <td>@departamento.Nombre</td>
                        <td>@departamento.Area.IdArea</td>
                        <td>@departamento.Area.Nombre</td>
                       
               
                                
                        <td><a class="btn btn-danger glyphicon glyphicon-trash text-center" href="@Url.Action("Delete", "Departamento", new { IdDepartamento=departamento.IdDepartamento})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');" ></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>